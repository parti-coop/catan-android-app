<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="android:alertDialogStyle">@style/AppAlertDialog</item>
    </style>

    <style name="AppDialogWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:alertDialogStyle">@style/AppAlertDialog</item>
    </style>

    <style name="LoginTheme" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <item name="colorPrimary">#966fd6</item>
        <item name="colorPrimaryDark">#8763c0</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="colorControlActivated">#fff</item>
        <item name="colorControlHighlight">#fff</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:alertDialogStyle">@style/AppAlertDialog</item>
    </style>

    <style name="AppAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="android:windowTitleStyle">@style/AppDialogWindowTitle</item>
    </style>

    <style name="SettingsTheme" parent="Base.Theme.AppCompat.Light.DialogWhenLarge">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppDialogWindowTitle" parent="Base.DialogWindowTitle.AppCompat">
    </style>

    <style name="AppMetiess" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="toolbar">@style/AppMetiessToolbar</item>
    </style>

    <style name="AppMetiessToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@android:color/white</item>
    </style>
</resources>

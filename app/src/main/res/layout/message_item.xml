<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/message_card_padding">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/draweeview_message_image"
            android:layout_width="@dimen/message_image"
            android:layout_height="@dimen/message_image"
            android:layout_gravity="top"
            android:paddingRight="5dp"
            fresco:actualImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            fresco:failureImage="@drawable/ic_account_circle_white_24dp"
            fresco:failureImageScaleType="centerCrop" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/textview_message_header"
                    android:textStyle="bold"
                    android:textColor="@color/style_color_primary_less_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <xyz.parti.catan.ui.view.LooselyRelativeTimeTextView
                    android:id="@+id/timetextview_message_created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_muted" />
            </LinearLayout>
            <xyz.parti.catan.ui.view.SmartTextView
                android:id="@+id/smarttextview_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/default_text" />
            <xyz.parti.catan.ui.view.SmartTextView
                android:id="@+id/smarttextview_message_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:textColor="@color/default_text" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_comment_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/messages_border"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/layout_coordinator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout_post_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/brand_gray"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/layout_no_posts_sign"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#fff"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_empty_box_brand_gray" />
                            <TextView
                                android:id="@+id/textview_no_posts_sign"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/no_posts" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/button_go_to_parties"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="@color/style_color_primary"
                                fancy:fb_focusColor="@color/style_color_primary"
                                fancy:fb_fontIconSize="20sp"
                                fancy:fb_fontIconResource="&#xf061;"
                                fancy:fb_iconPosition="right"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="@string/go_to_parties_button"
                                fancy:fb_textColor="#FFFFFF" />
                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/button_retry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingTop="10dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="@color/style_color_primary"
                                fancy:fb_focusColor="@color/style_color_primary"
                                fancy:fb_fontIconSize="20sp"
                                fancy:fb_fontIconResource="&#xf021;"
                                fancy:fb_iconPosition="right"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="@string/retry_button"
                                fancy:fb_textColor="#FFFFFF" />
                        </LinearLayout>
                    </RelativeLayout>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/layout_post_list_demo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:auto_start="false"
                        app:duration="5000"
                        app:tilt="5"
                        app:angle="cw_0"
                        app:base_alpha="0.7"
                        app:repeat_delay="2000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/post_demo" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <android.support.v7.widget.RecyclerView
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:id="@+id/recyclerview_post_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none" />
                </LinearLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <include
                    android:id="@+id/toolbar_app"
                    layout="@layout/app_toolbar" />
            </android.support.design.widget.AppBarLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_new_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="@dimen/fab_margins"
                android:layout_marginRight="@dimen/fab_margins"
                android:src="@drawable/ic_pencil_white"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:pressedTranslationZ="12dp" />
            <FrameLayout
                android:id="@+id/layout_new_posts_sign"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/button_new_posts_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/style_color_primary"
                    fancy:fb_focusColor="@color/style_color_primary_dark"
                    fancy:fb_fontIconResource="&#xf062;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="@string/action_refresh_posts"
                    fancy:fb_textColor="#FFFFFF" />
            </FrameLayout>
        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
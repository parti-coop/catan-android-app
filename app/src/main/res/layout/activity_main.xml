<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity">

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh_layout_post_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/layout_post_list_demo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:auto_start="false"
                        app:duration="2000"
                        app:angle="cw_270"
                        app:base_alpha="0.6"
                        app:repeat_delay="1000">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/dashboard_post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/dashboard_post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/dashboard_post_demo" />
                            <include
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/post_card_padding"
                                layout="@layout/dashboard_post_demo" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <android.support.v7.widget.RecyclerView
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:id="@+id/recyclerview_post_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none" />
                </LinearLayout>
            </android.support.v4.widget.SwipeRefreshLayout>
            <android.support.design.widget.AppBarLayout
                android:id="@+id/appbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <include
                    android:id="@+id/toolbar_app"
                    layout="@layout/app_toolbar" />
            </android.support.design.widget.AppBarLayout>
            <FrameLayout
                android:id="@+id/layout_new_posts_sign"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <mehdi.sakout.fancybuttons.FancyButton
                    android:id="@+id/button_new_posts_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    fancy:fb_borderColor="#FFFFFF"
                    fancy:fb_borderWidth="1dp"
                    fancy:fb_defaultColor="@color/style_color_primary"
                    fancy:fb_focusColor="@color/style_color_primary_dark"
                    fancy:fb_fontIconResource="&#xf062;"
                    fancy:fb_iconPosition="left"
                    fancy:fb_radius="30dp"
                    fancy:fb_text="@string/action_refresh_posts"
                    fancy:fb_textColor="#FFFFFF" />
            </FrameLayout>
        </android.support.design.widget.CoordinatorLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/layout_drawer_panel"
        android:layout_gravity="start"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111">
        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view_drawer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/navigation_main"
            app:menu="@menu/activity_main_drawer" />
        <!--<ListView-->
            <!--android:id="@+id/navList"-->
            <!--android:layout_width="280dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:choiceMode="singleChoice"-->
            <!--android:background="#ffffffff" />-->
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>